  "solution": {
    "trick_application": [
      "15% profit = 115/100 = 23/20, reverse = 20/23",
      "10% profit = 110/100 = 11/10, reverse = 10/11",
      "Trader's CP = 1265 × 20/23 × 10/11",
      "= 1265 × 200/253",
      "= 1265 × 200/253",
      "= 5 × 200 = ₹1000"
    ],
    "answer": 1000,
    "answer_display": "₹1000"
  },

