  "solution": {
    "trick_application": [
      "20% profit = 6/5, reverse = 5/6",
      "25% profit = 5/4, reverse = 4/5",
      "A's CP = 600 × 5/6 × 4/5",
      "= 600 × (5×4)/(6×5)",
      "= 600 × 20/30",
      "= 600 × 2/3",
      "= ₹400"
    ],
    "answer": 400,
