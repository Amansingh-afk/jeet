  "text": {
    "en": "If income tax is increased by 22% the net income is reduced by 3%. The rate of income tax is?",
    "hi": "यदि आयकर में 22% की वृद्धि होती है तो शुद्ध आय में 3% की कमी हो जाती है। आयकर की दर क्या है?"
  },

  "options": {
    "a": "10%",
    "b": "12%",
    "c": "14%",
    "d": "15%"
  },
  "correct": "b",

  "extracted_values": {
    "change_A": 22,
    "change_B": 3,
    "unit": "percentage"
  },

  "solution": {
    "trick_application": [
      "Income = Tax + Net Income (constant sum)",
      "Tax ↑ 22%, Net Income ↓ 3%",
      "Absolute changes equal: Tax × 22% = Net Income × 3%",
      "Tax : Net Income = 3 : 22",
      "Tax Rate = Tax/Income = 3/(3+22) = 3/25 = 12%"
    ],
    "answer": 12,
    "answer_display": "12%"
  },

